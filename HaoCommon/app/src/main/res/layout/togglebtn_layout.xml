<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.haoyunbang.common.view.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"></cn.haoyunbang.common.view.ToggleButton>

        <cn.haoyunbang.common.view.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"></cn.haoyunbang.common.view.ToggleButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <cn.haoyunbang.common.view.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            toggle:toggleborderWidth="2dp"
            toggle:offBorderColor="#000"
            toggle:offColor="#ddd"
            toggle:onColor="#f00"
            toggle:spotColor="#00f"></cn.haoyunbang.common.view.ToggleButton>

        <cn.haoyunbang.common.view.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            toggle:toggleborderWidth="2dp"
            toggle:offBorderColor="#000"
            toggle:offColor="#ddd"
            toggle:onColor="#f00"
            toggle:spotColor="#00f"></cn.haoyunbang.common.view.ToggleButton>
    </LinearLayout>


    <cn.haoyunbang.common.view.ToggleButton
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp" />

    <cn.haoyunbang.common.view.ToggleButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp" />


</LinearLayout>
